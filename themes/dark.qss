/* ============================================
   DARK THEME - SPQ Modular Application
   ============================================ */

/* ===== BASE STYLES ===== */
/* These styles apply globally across the application */

/* Main window base styling */
QMainWindow {
    /* color-picker: background-color: #000000; */
    background-color: rgba(0, 0, 0, 0);
    /* color-picker: border: #FFFFFF; */
    border: 2px solid rgba(255, 255, 255, 0.95);
    border-radius: 10px;
    padding: 0;
    margin: 0;
}

QMainWindow::separator {
    background: rgba(0, 0, 0, 0);
    width: 0;
    height: 0;
    margin: 0;
    padding: 0;
}

/* ===== MAIN WINDOW ===== */
/* Root window container - transparent background with shadow effect */
QMainWindow {
    background-color: rgba(0, 0, 0, 0);
    border: none;
    padding: 0;
    margin: 0;
}

/* ===== OVERLAY STYLING ===== */
/* Border frame with precise 5px border */
QFrame#borderOverlay {
    background-color: rgba(43, 43, 43, 0.8);
    border: 5px solid rgba(255, 255, 255, 1.0);
    border-radius: 6px;
    margin: 0;
    padding: 0;
}

/* Border frame in DWM mode - only show the border, not the background */
QFrame#borderOverlay[dwm="true"] {
    background-color: transparent;
    border: 5px solid rgba(255, 255, 255, 1.0);
    border-radius: 6px;
}

/* Backdrop frame with matching radius to border's inner area */
QFrame#overlayBackdrop {
    background-color: rgba(43, 43, 43, 1.0);
    border: none;
    /* Match border radius exactly to the border frame's inner radius */
    border-radius: 1px;
    margin: 0;
    padding: 0;
}

/* Overlay host window */
QWidget#overlayHostWindow {
    background-color: transparent;
    border: none;
}

/* Main content area - this is the visible frame with 80% opacity */
QFrame#main_frame {
    /* Base color with 80% opacity */
    /* color-picker: background-color: #2B2B2B; */
    background-color: rgba(43, 43, 43, 0.8);
    
    /* Primary visible border (also duplicated by QFrame#borderOverlay for top layering) */
    border: 2px solid rgba(255, 255, 255, 1.0);
    border-radius: 8px;
    
    /* Layout */
    padding: 0;
    margin: 0;
}

/* Overlay that draws the same border above children for proper underlap of the badge */
/* REMOVED DUPLICATE - See unified overlay styling section above */

/* Overlay backdrop: solid dark grey fill inside the border; opacity applied via windowOpacity */
/* REMOVED DUPLICATE - See unified overlay styling section above */

/* In DWM overlay mode, the backdrop must be fully transparent so the DWM host shows through */
QFrame#overlayBackdrop[dwm="true"] {
    background-color: rgba(0, 0, 0, 0);
    border: none;
    border-radius: 1px;
    margin: 0;
    padding: 0;
}

/* Duplicate QFrame#borderOverlay[dwm="true"] block removed - canonical definition above */

/* DWM host backdrop: provides pillar/letterbox bar color under the border host */
QWidget#overlayBackdropHost {
    /* color-picker: background-color: #2B2B2B */
    background-color: transparent;
    border-radius: 1px;
}

/* ===== TITLE BAR ===== */

/* ===== RESIZE INDICATOR ===== */
ResizeIndicator#resizeIndicator {
    /* color-picker: indicator-color: #FFFFFF; */
    qproperty-indicatorColor: rgba(255,255,255,1.0);
    background: transparent;
}

/* Main title bar frame */
QFrame#titleBar {
    /* color-picker: background-color: #1A1A1A */
    background-color: rgba(26, 26, 26, 0.9);
    /* color-picker: border-top-left-radius: #FFFFFF */
    border-top-left-radius: 10px;
    /* color-picker: border-top-right-radius: #FFFFFF */
    border-top-right-radius: 10px;
    /* color-picker: border: #000000 */
    border: none;
    /* color-picker: border-bottom: #FFFFFF */
    border-bottom: 2px solid rgba(255, 255, 255, 1.0);
    /* color-picker: margin: #000000 */
    margin: 0;
    /* color-picker: padding: #000000 */
    padding: 0;
    /* Slightly taller to avoid icon clipping */
    /* color-picker: height: #FFFFFF */
    height: 60px;
    /* color-picker: min-height: #FFFFFF */
    min-height: 60px;
    /* color-picker: max-height: #FFFFFF */
    max-height: 60px;
}

/* Title bar icon (clean, single definition) */
QFrame#titleBar QLabel#titleIcon {
    /* Force 55px icon box; positioned on far left by layout */
    /* color-picker: width: #FFFFFF */
    width: 55px;
    /* color-picker: height: #FFFFFF */
    height: 55px;
    /* color-picker: min-width: #FFFFFF */
    min-width: 55px;
    /* color-picker: min-height: #FFFFFF */
    min-height: 55px;
    /* color-picker: max-width: #FFFFFF */
    max-width: 55px;
    /* color-picker: max-height: #FFFFFF */
    max-height: 55px;
    /* color-picker: margin: #000000 */
    margin: 0 8px 0 12px;  /* small left inset and spacing to title */
    /* color-picker: padding: #000000 */
    padding: 0;
    qproperty-alignment: 'AlignVCenter | AlignLeft';
}

/* Title bar label (single definition) */
QFrame#titleBar QLabel#titleLabel {
    /* color-picker: color: #FFFFFF */
    color: rgba(255, 255, 255, 1.0);
    font-weight: bold;
    /* color-picker: font-size: #FFFFFF */
    font-size: 24px;
    /* color-picker: padding: #000000 */
    padding: 0 12px;
    /* color-picker: margin: #000000 */
    margin: 0;
    /* color-picker: background-color: #000000 */
    background-color: rgba(0, 0, 0, 0);
    qproperty-alignment: 'AlignVCenter | AlignLeft';
}

/* Close button styling */
QFrame#titleBar QPushButton#closeButton {
    /* color-picker: background-color: #000000 */
    background-color: rgba(0, 0, 0, 0);
    /* color-picker: color: #FFFFFF */
    color: rgba(255, 255, 255, 1.0);
    /* color-picker: border: #000000 */
    border: 1px solid rgba(0, 0, 0, 0);
    /* color-picker: border-radius: #FFFFFF */
    border-radius: 2px;
    font-family: "Segoe UI Symbol";  /* Better symbol support */
    font-size: 20px;
    font-weight: bold;
    /* color-picker: margin: #000000 */
    margin: 3px 6px 3px 0;
    /* color-picker: padding: #000000 */
    padding: 0;
    /* color-picker: min-width: #FFFFFF */
    min-width: 24px;
    /* color-picker: min-height: #FFFFFF */
    min-height: 24px;
    /* color-picker: max-width: #FFFFFF */
    max-width: 24px;
    /* color-picker: max-height: #FFFFFF */
    max-height: 24px;
    text-align: center;
    qproperty-text: "X";  /* Explicitly set the ASCII X character */
}

/* Close button hover/pressed states */
QFrame#titleBar QPushButton#closeButton:hover {
    /* color-picker: background-color: #E81123 */
    background-color: rgba(232, 17, 35, 0.0);  /* Keep transparent */
    /* color-picker: border: #F1707A */
    border: 1px solid rgba(241, 112, 122, 0.0);
    /* Invert text color on hover to match About dialog */
    color: rgba(0, 0, 0, 1.0);
}

QFrame#titleBar QPushButton#closeButton:pressed {
    /* color-picker: background-color: #F1707A */
    background-color: rgba(241, 112, 122, 0.0);
    /* color-picker: border: #E81123 */
    border: 0px solid rgba(232, 17, 35, 0.0);
    /* Keep hover inversion while pressed */
    color: rgba(0, 0, 0, 1.0);
}

/* Note: Qt Style Sheets do not style layouts; removed ineffective QHBoxLayout selector. */

/* Ensure all child widgets are fully opaque */
QFrame#main_frame > * {
    background: rgba(0, 0, 0, 0);
}

/* Re-assert title bar background after generic child transparency rule
   (the rule above made the title bar appear same as main content). */
QFrame#titleBar {
    /* color-picker: background-color: #1A1A1A */
    background-color: rgba(26, 26, 26, 0.9);
}

/* ===== COMMON COMPONENTS ===== */

/* Standard checkboxes - programmatic CircleCheckBox handles its own styling */
QCheckBox {
    spacing: 8px;
    font-family: 'Segoe UI';
    font-size: 13px;
    color: rgba(255,255,255,0.8);
    background: transparent;
}
/* Reusable components used across dialogs */

/* ===== COMBO BOX ===== */
/* Base combobox styling */
QComboBox {
    /* color-picker: background-color: rgba(42, 42, 42, 1.0); */
    background-color: rgba(42, 42, 42, 1.0);
    /* color-picker: color: rgba(255, 255, 255, 1.0); */
    color: rgba(255, 255, 255, 1.0);
    /* color-picker: border-color: rgba(255, 255, 255, 1.0); */
    border: 2px solid rgba(255, 255, 255, 1.0);
    border-radius: 16px;
    padding: 6px 15px 6px 30px;
    font-family: 'Segoe UI';
    font-size: 12px;
    font-weight: bold;
    text-transform: uppercase;
    min-height: 32px;
    min-width: 200px;
    text-align: left;
    /* color-picker: selection-background-color: rgba(58, 58, 58, 1.0); */
    selection-background-color: rgba(58, 58, 58, 1.0);
    /* color-picker: selection-color: rgba(255, 255, 255, 1.0); */
    selection-color: rgba(255, 255, 255, 1.0);
}

/* Hover state */
QComboBox:hover {
    /* color-picker: hover-background-color: rgba(58, 58, 58, 1.0); */
    background-color: rgba(58, 58, 58, 1.0);
    /* color-picker: hover-border-color: rgba(153, 153, 153, 1.0); */
    border-color: rgba(153, 153, 153, 1.0);
}

/* Dropdown button */
QComboBox::drop-down {
    subcontrol-origin: padding;
    subcontrol-position: right center;
    width: 24px;
    border: none;
    background: transparent;
    padding-right: 4px;
}

QComboBox::down-arrow {
    width: 6px;
    height: 6px;
    /* color-picker: arrow-color: #FFFFFF; */
    background: rgba(255, 255, 255, 1.0);
    border-radius: 3px;
    margin-right: 8px;
    image: none;
    border: none;
}

/* Dropdown menu */
QComboBox QAbstractItemView {
    /* color-picker: menu-background: #2A2A2A; */
    background-color: rgba(42, 42, 42, 1.0);
    /* color-picker: menu-text: #FFFFFF; */
    color: rgba(255, 255, 255, 1.0);
    /* color-picker: menu-border: #666666; */
    border: 2px solid rgba(102, 102, 102, 1.0);
    border-radius: 8px;
    padding: 4px;
    /* color-picker: menu-selection-background: rgba(58, 58, 58, 1.0); */
    background-color: rgba(42, 42, 42, 1.0);
    /* color-picker: menu-selection-text: rgba(255, 255, 255, 1.0); */
    color: rgba(255, 255, 255, 1.0);
    selection-background-color: rgba(58, 58, 58, 1.0);
    selection-color: rgba(255, 255, 255, 1.0);
    outline: none;
    margin: 2px 0;
}

/* Dropdown items */
QComboBox QAbstractItemView::item {
    /* color-picker: item-background: #2A2A2A; */
    background-color: rgba(42, 42, 42, 1.0);
    /* color-picker: item-text: #FFFFFF; */
    color: rgba(255, 255, 255, 1.0);
    padding: 8px 12px;
    border-radius: 4px;
    margin: 2px 0;
}

QComboBox QAbstractItemView::item:hover {
    /* color-picker: item-hover-background: #3A3A3A; */
    background-color: rgba(58, 58, 58, 1.0);
}

QComboBox QAbstractItemView::item:selected {
    /* color-picker: item-selected-background: #3A3A3A; */
    background-color: rgba(58, 58, 58, 1.0);
    /* color-picker: item-selected-border: #666666; */
    border: 1px solid rgba(102, 102, 102, 1.0);
}

/* Disabled state */
QComboBox:disabled {
    /* color-picker: disabled-text: #666666; */
    color: rgba(102, 102, 102, 1.0);
    /* color-picker: disabled-border: #444444; */
    border-color: rgba(68, 68, 68, 1.0);
    /* color-picker: disabled-background: #222222; */
    background-color: rgba(34, 34, 34, 1.0);
}

/* Focus state - explicitly set to match normal state to prevent system focus styling */
QComboBox:focus {
    border: 2px solid rgba(102, 102, 102, 1.0);
    outline: none;
}

/* ===== MAIN DIALOG TITLE BAR (Legacy rules removed) ===== */
/* Cleanup: Removed generic #titleBar/#titleFrame/#titleLabel/#appTitle and
   QPushButton#closeButton blocks below to avoid conflicting with the scoped
   MainDialog QFrame#titleBar rules above. Single source of truth retained. */

/* ===== SETTINGS DIALOG ===== */
/* Styles specific to the settings dialog */

/* Settings dialog container */
QDialog#settingsDialog {
    background-color: rgba(20, 20, 20, 1.0);
    border: 2px solid rgba(68, 68, 68, 1.0);
    border-radius: 8px;
}

/* ===== SUBSETTINGS DIALOG ===== */
QDialog#subsettingsDialog,
QDialog#aboutDialog {
    background-color: transparent; /* let inner frame paint background and border */
    border: none; /* outer border drawn by inner frame to avoid double-borders */
    border-radius: 4px; /* keep for hit testing consistency */
    padding: 0;
    margin: 0;
}

/* Subsettings title bar: 90% opacity */
#subsettingsDialog > #titleFrame {
    background-color: rgba(26, 26, 26, 0.90);
    border: none; /* outer border frame draws the outline */
    border-top-left-radius: 6px;  /* 8px outer radius - 2px padding */
    border-top-right-radius: 6px; /* keep inside the outer rounded clip */
    border-bottom: 2px solid rgba(255, 255, 255, 1.0); /* Straight separator line only */
    margin: 2px 2px 0 2px; /* match outer padding to avoid fringe */
    padding: 0;
    min-width: 250px;
}

/* About dialog title bar: keep existing opacity (slightly different if desired) */
#aboutDialog QWidget#titleFrame {
    background-color: rgba(26, 26, 26, 0.92);
    border: none;
    border-top-left-radius: 6px;
    border-top-right-radius: 6px;
    border-bottom: 2px solid rgba(255, 255, 255, 1.0);
    margin: 2px 2px 0 2px;
    padding: 0;
    min-width: 250px;
}

/* Inner content frame should also respect rounded corners at the bottom */
/* Subsettings content: transparent (single background provided by outer border) */
#subsettingsDialog QFrame#settingsContentFrame {
    background-color: transparent;
    border: none;
    border-bottom-left-radius: 6px;
    border-bottom-right-radius: 6px;
    margin: 0 2px 2px 2px;
}

/* About dialog content: keep existing background */
#aboutDialog QFrame#aboutContentFrame {
    background-color: rgba(43, 43, 43, 0.8);
    border: none;
    border-bottom-left-radius: 6px;
    border-bottom-right-radius: 6px;
    margin: 0 2px 2px 2px;
}

/* Ensure Subsettings scroll area doesn't paint its own background */
#subsettingsDialog QScrollArea,
#subsettingsDialog QScrollArea > QWidget#qt_scrollarea_viewport {
    background: transparent;
}

/* Clip the viewport so bottom-right corner follows the parent radius */
#subsettingsDialog QScrollArea > QWidget#qt_scrollarea_viewport {
    border-bottom-right-radius: 6px;
}

/* Remove the square filler in the bottom-right where scrollbars meet */
#subsettingsDialog QAbstractScrollArea::corner {
    background: transparent;
    border: none;
}

/* Ensure vertical scrollbar doesn't paint opaque background into the corner */
#subsettingsDialog QScrollBar:vertical {
    background: transparent;
    border: none;
    /* Inset from right/bottom so it stays within the rounded corner */
    margin: 0 2px 6px 0; /* give a bit more clearance at the bottom */
    border-bottom-right-radius: 6px;
}
#subsettingsDialog QScrollBar::groove:vertical {
    background: transparent;        /* no track fill under the handle */
    margin: 2px 0 6px 0;            /* keep groove away from the curved corner */
    border: none;
    border-bottom-right-radius: 6px;/* follow parent clip */
}
#subsettingsDialog QScrollBar::add-line:vertical,
#subsettingsDialog QScrollBar::sub-line:vertical {
    background: transparent;
    border: none;
    height: 0px; /* remove arrow button areas to avoid square fill */
    width: 0px;
}
/* Ensure the page areas are transparent too (no square fill at corner) */
#subsettingsDialog QScrollBar::add-page:vertical,
#subsettingsDialog QScrollBar::sub-page:vertical {
    background: transparent;
}

/* Round and inset the handle so it doesn't protrude into the corner */
#subsettingsDialog QScrollBar::handle:vertical {
    background: rgba(255, 255, 255, 0.35);
    border-radius: 4px;
    margin: 2px;               /* inset inside the groove */
    min-height: 24px;
}

/* Also ensure any immediate content holder under the viewport is transparent */
#subsettingsDialog QScrollArea QWidget {
    background: transparent;
}

/* SubSettings title label */
#subsettingsDialog QLabel#titleLabel,
#aboutDialog QLabel#titleLabel {
    color: rgba(255, 255, 255, 1.0);
    font-size: 16px;
    font-weight: bold;
    padding: 0 8px;
    margin: 0;
    background: transparent;
}

/* About dialog close button: simple X, no background/border, invert color on hover */
#aboutDialog QPushButton#closeButton {
    background: transparent;
    border: none;
    color: rgba(255, 255, 255, 1.0); /* white by default on dark */
    font-family: "Segoe UI Symbol";
    font-size: 22px; /* slightly larger */
