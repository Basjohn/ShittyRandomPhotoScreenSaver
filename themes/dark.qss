/* ===== CONTEXT MENUS ===== */
/* Styles for all context menus */

/* Context Menu Styling */
QMenu {
    /* color-picker: background-color: #2A2A2A; */
    background-color: rgba(42, 42, 42, 1.0);
    /* color-picker: color: #FFFFFF; */
    color: rgba(255, 255, 255, 1.0);
    /* color-picker: border: #444444; */
    border: 1px solid rgba(68, 68, 68, 1.0);
    padding: 4px;
    border-radius: 4px;
}

QMenu::item {
    padding: 6px 25px 6px 20px;
    border-radius: 2px;
}

QMenu::item:selected {
    /* color-picker: background-color: #3A3A3A; */
    background-color: rgba(58, 58, 58, 1.0);
}

QMenu::item:disabled {
    /* color-picker: color: #808080; */
    color: rgba(128, 128, 128, 1.0);
}

QMenu::separator {
    height: 1px;
    /* color-picker: background-color: #444444; */
    background-color: rgba(68, 68, 68, 1.0);
    margin: 4px 0;
}

/* Group boxes */
QGroupBox {
    /* color-picker: border: #444444; */
    border: 1px solid rgba(68, 68, 68, 1.0);
    border-radius: 4px;
