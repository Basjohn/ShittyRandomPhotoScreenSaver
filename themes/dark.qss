    min-width: 24px;
    min-height: 24px;
    max-width: 24px;
    max-height: 24px;
    padding: 0;
    margin: 3px 6px 3px 0;
    qproperty-text: "X";
}

#aboutDialog QPushButton#closeButton:hover {
    color: rgba(0, 0, 0, 1.0); /* invert to black on hover */
    background: transparent; /* keep transparent */
}

