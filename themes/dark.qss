QLabel#errorLabel {
    /* color-picker: color: #FF5757; */
    color: rgba(255, 87, 87, 1.0);
    font-weight: bold;
}

/* Badge display - Flush with bottom border and no clipping */
QLabel#badgeLabel {
    /* color-picker: background-color: #000000; */
    background-color: rgba(0, 0, 0, 0); /* Blends with window background */
    /* color-picker: color: #FFFFFF; */
    color: rgba(255, 255, 255, 1.0);
    font-weight: bold;
    font-size: 11px;
    padding: 2px 8px 0px 8px; /* Top padding reduced to 2px, bottom padding removed */
    margin: 0;
    border: none;
    border-radius: 0 0 4px 4px; /* Rounded bottom corners only */
    text-align: center;
    min-height: 16px;
    max-height: 16px;
    margin-top: -1px; /* Pull up slightly to eliminate gap */
}

